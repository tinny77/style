<section id='sizing__width' class='mb-32'>
	<h1 class='text-20 text-word-2 mb-8'>Width</h1>
	<h2 class='font-light text-word-3 mb-24'>Utilities for setting the width of
		an element.
	</h2>

	{{> spacer-helpers/spacers }}

	{{> spacer-helpers/width-spacer }}

	<div class='max-h-288 overflow-y-auto mb-32'>
		<table class='vv-table'>
			<thead class='sticky z-sticky top-0 bg-surface'>
				<tr>
					<th>
						Class
					</th>
					<th>
						Properties
					</th>
				</tr>
			</thead>
			<tbody class='align-baseline'>
				<tr>
					<td
						translate='no'
						class='font-mono text-accent whitespace-wrap'
					>
						w-{spacer-size}
					</td>
					<td
						translate='no'
						class='font-mono text-info whitespace-wrap'
					>
						width: {spacer-value};
					</td>
				</tr>
				<tr>
					<td
						translate='no'
						class='font-mono text-accent whitespace-wrap'
					>
						w-{width-spacer-size}
					</td>
					<td
						translate='no'
						class='font-mono text-info whitespace-wrap'
					>
						width: {width-spacer-value};
					</td>
				</tr>
			</tbody>
		</table>
	</div>
</section>