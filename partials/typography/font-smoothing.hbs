<section id='typography__font-smoothing' class='mb-32'>
	<h1 class='text-20 text-word-2 mb-8'>Font Smoothing</h1>
	<h2 class='font-light text-word-3 mb-24'>Utilities for controlling the font
		smoothing of an element.
	</h2>

	<div class='max-h-288 overflow-y-auto mb-32'>
		<table class='vv-table'>
			<thead class='sticky z-sticky top-0 bg-surface'>
				<tr>
					<th>
						Class
					</th>
					<th>
						Properties
					</th>
				</tr>
			</thead>
			<tbody class='align-baseline'>
				<tr>
					<td
						translate='no'
						class='font-mono text-accent whitespace-nowrap'
					>
						antialiased
					</td>
					<td
						translate='no'
						class='font-mono text-info whitespace-nowrap'
					>
						<p>-webkit-font-smoothing: antialiased;</p>
						<p>-moz-osx-font-smoothing: grayscale;</p>
					</td>
				</tr>
				<tr>
					<td
						translate='no'
						class='font-mono text-accent whitespace-nowrap'
					>
						subpixel-antialiased
					</td>
					<td
						translate='no'
						class='font-mono text-info whitespace-nowrap'
					>
						<p>-webkit-font-smoothing: auto;</p> 
						<p>-moz-osx-font-smoothing: auto;</p>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
</section>