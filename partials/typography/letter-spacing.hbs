<section id='typography__letter-spacing' class='mb-32'>
	<h1 class='text-20 text-word-2 mb-8'>Letter Spacing</h1>
	<h2 class='font-light text-word-3 mb-24'>Utilities for controlling the
		tracking (letter spacing) of an element.
	</h2>

	<div class='max-h-288 overflow-y-auto mb-32'>
		<table class='vv-table'>
			<thead class='sticky z-sticky top-0 bg-surface'>
				<tr>
					<th>
						Class
					</th>
					<th>
						Properties
					</th>
				</tr>
			</thead>
			<tbody class='align-baseline'>
				<tr>
					<td
						translate='no'
						class='font-mono text-accent whitespace-nowrap'
					>
						tracking-tighter
					</td>
					<td
						translate='no'
						class='font-mono text-info whitespace-nowrap'
					>
						letter-spacing: -0.05em;
					</td>
				</tr>
				<tr>
					<td
						translate='no'
						class='font-mono text-accent whitespace-nowrap'
					>
						tracking-tight
					</td>
					<td
						translate='no'
						class='font-mono text-info whitespace-nowrap'
					>
						letter-spacing: -0.025em;
					</td>
				</tr>
				<tr>
					<td
						translate='no'
						class='font-mono text-accent whitespace-nowrap'
					>
						tracking-normal
					</td>
					<td
						translate='no'
						class='font-mono text-info whitespace-nowrap'
					>
						letter-spacing: 0em;
					</td>
				</tr>
				<tr>
					<td
						translate='no'
						class='font-mono text-accent whitespace-nowrap'
					>
						tracking-wide
					</td>
					<td
						translate='no'
						class='font-mono text-info whitespace-nowrap'
					>
						letter-spacing: 0.025em;
					</td>
				</tr>
				<tr>
					<td
						translate='no'
						class='font-mono text-accent whitespace-nowrap'
					>
						tracking-wider
					</td>
					<td
						translate='no'
						class='font-mono text-info whitespace-nowrap'
					>
						letter-spacing: 0.05em;
					</td>
				</tr>
				<tr>
					<td
						translate='no'
						class='font-mono text-accent whitespace-nowrap'
					>
						tracking-widest
					</td>
					<td
						translate='no'
						class='font-mono text-info whitespace-nowrap'
					>
						letter-spacing: 0.1em;
					</td>
				</tr>
			</tbody>
		</table>
	</div>
</section>