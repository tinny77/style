<section id='typography__text-decoration-color' class='mb-32'>
	<h1 class='text-20 text-word-2 mb-8'>Text Decoration Color</h1>
	<h2 class='font-light text-word-3 mb-24'>Utilities for controlling the color
		of text decorations.
	</h2>

	<div class='max-h-288 overflow-y-auto mb-32'>
		<table class='vv-table'>
			<thead class='sticky z-sticky top-0 bg-surface'>
				<tr>
					<th>
						Class
					</th>
					<th>
						Properties
					</th>
				</tr>
			</thead>
			<tbody class='align-baseline'>
				{{#each colors}}
				<tr>
					<td
						translate='no'
						class='font-mono text-accent whitespace-nowrap'
					>
						decoration-{{@key}}
					</td>
					<td
						translate='no'
						class='underline decoration-{{@key}} font-mono text-info whitespace-nowrap'
					>
					text-decoration-color: {{this}}
					</td>
				</tr>
				{{/each}}
			</tbody>
		</table>
	</div>
</section>