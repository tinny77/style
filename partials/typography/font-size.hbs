<section id='typography__font-size' class='mb-32'>
	<h1 class='text-20 text-word-2 mb-8'>Font Size</h1>
	<h2 class='font-light text-word-3 mb-24'>Utilities for controlling the font
		size of an element.
	</h2>

	{{> spacer-helpers/font-size }}

	<div class='max-h-288 overflow-y-auto mb-32'>
		<table class='vv-table'>
			<thead class='sticky z-sticky top-0 bg-surface'>
				<tr>
					<th>
						Class
					</th>
					<th>
						Properties
					</th>
				</tr>
			</thead>
			<tbody class='align-baseline'>
				<tr>
					<td
						translate='no'
						class='font-mono text-accent whitespace-wrap'
					>
						text-{font-size}
					</td>
					<td
						translate='no'
						class='font-mono text-info whitespace-wrap'
					>
						font-size: {font-value}
					</td>
				</tr>
			</tbody>
		</table>
	</div>
</section>