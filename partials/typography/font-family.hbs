<section id='typography__font-family' class='mb-32'>
	<h1 class='text-20 text-word-2 mb-8'>Font Family</h1>
	<h2 class='font-light text-word-3 mb-24'>Utilities for controlling the font
		family of an element.
	</h2>

	<div class='max-h-288 overflow-y-auto mb-32'>
		<table class='vv-table'>
			<thead class='sticky z-sticky top-0 bg-surface'>
				<tr>
					<th>
						Class
					</th>
					<th>
						Properties
					</th>
				</tr>
			</thead>
			<tbody class='align-baseline'>
				{{#each font-family}}
				<tr>
					<td
						translate='no'
						class='font-mono text-accent whitespace-nowrap'
					>
						font-{{@key}}
					</td>
					<td
						translate='no'
						class='font-mono text-info whitespace-nowrap'
					>
					font-family: {{this}};
					</td>
				</tr>
				{{/each}}
			</tbody>
		</table>
	</div>

	<div class="container h-full rounded-md bg-surface-1 p-24">
		<p class="font-sans border-b border-alpha-1 mb-24 pb-24">I'm font-sans</p>
		<p class="font-serif border-b border-alpha-1 mb-24 pb-24">I'm font-serif</p>
		<p class="font-mono">I'm font-mono</p>
	</div>
</section>