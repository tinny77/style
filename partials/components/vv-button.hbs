<section id='component__vv-button' class='mb-32'>
	<h1 class='text-20 text-word-2 mb-8'>vv-button</h1>
	<h2 class='font-light text-word-3 mb-24'>Buttons allow users to perform an
		action or to navigate to another page.
	</h2>
	<div class='mb-24'>
		<button type='button' class='vv-button'>
			Accent
		</button>
		<button type='button' class='vv-button hover'>
			Hover
		</button>
		<button type='button' class='vv-button active'>
			Active
		</button>
		<button type='button' class='vv-button focus-visible'>
			Focus
		</button>
		<button type='button' class='vv-button' aria-disabled='true' disabled>
			Disabled
		</button>
	</div>
	<div class='mb-24'>
		<button type='button' class='vv-button vv-button--primary'>
			Primary
		</button>
		<button type='button' class='vv-button vv-button--primary hover'>
			Hover
		</button>
		<button type='button' class='vv-button vv-button--primary active'>
			Active
		</button>
		<button class='vv-button vv-button--primary focus-visible'>
			Focus
		</button>
		<button
			type='button'
			class='vv-button vv-button--primary'
			aria-disabled='true'
			disabled
		>
			Disabled
		</button>
	</div>
	<div class='mb-24'>
		<button type='button' class='vv-button vv-button--secondary'>
			Secondary
		</button>
		<button type='button' class='vv-button vv-button--secondary hover'>
			Hover
		</button>
		<button
			type='button'
			class='vv-button vv-button--secondary active'
		>Active</button>
		<button class='vv-button vv-button--secondary focus-visible'>
			Focus
		</button>
		<button
			class='vv-button vv-button--secondary'
			aria-disabled='true'
			disabled
		>
			Disabled
		</button>
	</div>
	<div class='mb-24'>
		<button type='button' class='vv-button vv-button--danger'>
			Danger
		</button>
		<button type='button' class='vv-button vv-button--danger hover'>
			Hover
		</button>
		<button
			type='button'
			class='vv-button vv-button--danger active'
		>Active</button>
		<button class='vv-button vv-button--danger focus-visible'>
			Focus
		</button>
		<button
			class='vv-button vv-button--danger'
			aria-disabled='true'
			disabled
		>
			Disabled
		</button>
	</div>
	<div class='mb-24'>
		<button type='button' class='vv-button vv-button--ghost'>Ghost</button>
		<button type='button' class='vv-button vv-button--ghost hover'>
			Hover
		</button>
		<button type='button' class='vv-button vv-button--ghost active'>
			Active
		</button>
		<button type='button' class='vv-button vv-button--ghost focus-visible'>
			Focus
		</button>
		<button
			type='button'
			class='vv-button vv-button--ghost'
			aria-disabled='true'
			disabled
		>
			Disabled
		</button>
	</div>
	<div class='mb-24'>
		<button type='button' class='vv-button vv-button--text'>Text</button>
		<button type='button' class='vv-button vv-button--text hover'>
			Hover
		</button>
		<button type='button' class='vv-button vv-button--text active'>
			Active
		</button>
		<button type='button' class='vv-button vv-button--text focus-visible'>
			Focus
		</button>
		<button
			type='button'
			class='vv-button vv-button--text'
			aria-disabled='true'
			disabled
		>
			Disabled
		</button>
	</div>
	<div class='mb-24 bg-black p-16 nx-16'>
		<button type='button' class='vv-button vv-button--static-light'>
			Static Light
		</button>
		<button type='button' class='vv-button vv-button--static-light hover'>
			Hover
		</button>
		<button type='button' class='vv-button vv-button--static-light active'>
			Active
		</button>
		<button class='vv-button vv-button--static-light focus-visible'>
			Focus
		</button>
		<button
			class='vv-button vv-button--static-light'
			aria-disabled='true'
			disabled
		>
			Disabled
		</button>
	</div>
	<div class='mb-24 bg-white p-16 nx-16'>
		<button type='button' class='vv-button vv-button--static-dark'>
			Static Dark
		</button>
		<button type='button' class='vv-button vv-button--static-dark hover'>
			Hover
		</button>
		<button type='button' class='vv-button vv-button--static-dark active'>
			Active
		</button>
		<button class='vv-button vv-button--static-dark focus-visible'>
			Focus
		</button>
		<button
			class='vv-button vv-button--static-dark'
			aria-disabled='true'
			disabled
		>
			Disabled
		</button>
	</div>
	<div class='mb-24 flex gap-4 items-center'>
		<button type='button' class='vv-button vv-button--rounded'>
			<span class='vv-button__label'>Rounded</span>
		</button>
		<button
			type='button'
			class='vv-button vv-button--rounded vv-button--primary'
		>
			<span class='vv-button__label'>Rounded Primary</span>
		</button>
		<button
			type='button'
			class='vv-button vv-button--rounded vv-button--secondary'
		>
			<span class='vv-button__label'>Rounded Secondary</span>
		</button>
		<button type='button' class='vv-button vv-button--rounded'>
			<span class='iconify' data-icon='akar-icons:heart'></span>
		</button>
	</div>
	<div class='mb-24 md:columns-3 gap-4'>
		<button type='button' class='vv-button vv-button--block mb-8'>
			Block
		</button>
		<button
			type='button'
			class='vv-button vv-button--block vv-button--primary mb-8'
		>
			Block Primary
		</button>
		<button
			type='button'
			class='vv-button vv-button--block vv-button--secondary'
		>
			Block Secondary
		</button>
	</div>
	<div class='mb-24 flex gap-4'>
		<a href='#' role='button' class='vv-button'>
			<span class='vv-button__label'>Link</span>
		</a>
		<a
			href='javascript:;'
			role='button'
			aria-disabled='true'
			class='vv-button disabled'
		>
			<span class='vv-button__label'>Link Disabled</span>
		</a>
		<button type='button' class='vv-button'>
			<span class='iconify' data-icon='akar-icons:heart'></span>
			<span class='vv-button__label'>Icon Left</span>
		</button>
		<button type='button' class='vv-button vv-button--reverse'>
			<span class='iconify' data-icon='akar-icons:heart'></span>
			<span class='vv-button__label'>Icon Right</span>
		</button>
	</div>
	<div class='mb-24 flex gap-4'>
		<button type='button' class='vv-button'>
			<span role='status' class='vv-badge vv-badge--white'>14</span>
			<span class='vv-button__label'>Badge left</span>
		</button>
		<button type='button' class='vv-button vv-button--reverse'>
			<span role='status' class='vv-badge vv-badge--warning'>42</span>
			<span class='vv-button__label'>Badge Right</span>
		</button>
	</div>
	<div class='mb-24 flex gap-4'>
		<button
			type='button'
			class='vv-button vv-button--ghost vv-button--column'
		>
			<span class='iconify' data-icon='akar-icons:heart'></span>
			<span class='vv-button__label'>Top Icon</span>
		</button>
		<button
			type='button'
			class='vv-button vv-button--ghost vv-button--column vv-button--reverse'
		>
			<span class='iconify' data-icon='akar-icons:heart'></span>
			<span class='vv-button__label'>Bottom Icon</span>
		</button>
	</div>
</section>