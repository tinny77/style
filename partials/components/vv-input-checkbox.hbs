<section id='component__vv-input-checkbox' class='mb-32'>
	<h1 class='text-20 text-word-2 mb-8'>vv-input-checkbox</h1>
	<h2 class='font-light text-word-3 mb-24'>Checkboxes allow users to select
		multiple items from a list of individual items, or to mark one
		individual item as selected.
	</h2>
	<div class='mb-24'>
		<label class='vv-input-checkbox' for='checkbox-option'>
			<input
				type='checkbox'
				id='checkbox-option'
				name='checkbox-option'
				value='checkbox-option'
			/>
			Option
		</label>
		<label class='vv-input-checkbox' for='checkbox-option-checked'>
			<input
				type='checkbox'
				id='checkbox-option-checked'
				name='checkbox-option-checked'
				value='checkbox-option-checked'
				checked='checked'
			/>
			Checked
		</label>
		<label class='vv-input-checkbox' for='checkbox-option-indeterminate'>
			<input
				type='checkbox'
				id='checkbox-option-indeterminate'
				name='checkbox-option-indeterminate'
				value='checkbox-option-indeterminate'
			/>
			Indeterminate
		</label>
		<script>
			const checkbox =
			document.getElementById("checkbox-option-indeterminate");
			checkbox.indeterminate = true;
		</script>
		<label class='vv-input-checkbox' for='checkbox-option-checked'>
			<input
				type='checkbox'
				id='checkbox-option-focus'
				name='checkbox-option-focus'
				value='checkbox-option-focus'
				checked='checked'
				class='focus-visible'
			/>
			Focus
		</label>
		<label class='vv-input-checkbox' for='checkbox-option-disabled'>
			<input
				type='checkbox'
				id='checkbox-option-disabled'
				name='checkbox-option-disabled'
				value='checkbox-option-disabled'
				disabled='disabled'
			/>
			Disabled
		</label>
		<label class='vv-input-checkbox' for='checkbox-option-disabled-checked'>
			<input
				type='checkbox'
				id='checkbox-option-disabled-checked'
				name='checkbox-option-disabled-checked'
				value='checkbox-option-disabled-checked'
				disabled='disabled'
				checked='checked'
			/>
			Disabled Checked
		</label>
		<label
			class='vv-input-checkbox readonly'
			for='checkbox-option-readonly'
		>
			<input
				type='checkbox'
				id='checkbox-option-readonly'
				name='checkbox-option-readonly'
				value='checkbox-option-readonly'
				disabled='disabled'
				tabindex='-1'
			/>
			Readonly
		</label>
		<label
			class='vv-input-checkbox readonly'
			for='checkbox-option-readonly-checked'
		>
			<input
				type='checkbox'
				id='checkbox-option-readonly-checked'
				name='checkbox-option-readonly-checked'
				value='checkbox-option-readonly-checked'
				disabled='disabled'
				checked='checked'
				tabindex='-1'
			/>
			Readonly Checked
		</label>
	</div>
	<label
		class='vv-input-checkbox vv-input-checkbox--switch'
		for='switch-option'
	>
		<input
			type='checkbox'
			role='switch'
			id='switch-option'
			name='switch-option'
			value='switch-option'
		/>
		Option
	</label>
	<label
		class='vv-input-checkbox vv-input-checkbox--switch'
		for='switch-option-checked'
	>
		<input
			type='checkbox'
			role='switch'
			id='switch-option-checked'
			name='switch-option-checked'
			value='switch-option-checked'
			checked='checked'
		/>
		Checked
	</label>
	<label
		class='vv-input-checkbox vv-input-checkbox--switch'
		for='switch-option-checked'
	>
		<input
			type='checkbox'
			role='switch'
			id='switch-option-focus'
			name='switch-option-focus'
			value='switch-option-focus'
			checked='checked'
			class='focus-visible'
		/>
		Focus
	</label>
	<label
		class='vv-input-checkbox vv-input-checkbox--switch'
		for='switch-option-disabled'
	>
		<input
			type='checkbox'
			role='switch'
			id='switch-option-disabled'
			name='switch-option-disabled'
			value='switch-option-disabled'
			disabled='disabled'
		/>
		Disabled
	</label>
	<label
		class='vv-input-checkbox vv-input-checkbox--switch'
		for='switch-option-disabled-checked'
	>
		<input
			type='checkbox'
			role='switch'
			id='switch-option-disabled-checked'
			name='switch-option-disabled-checked'
			value='switch-option-disabled-checked'
			disabled='disabled'
			checked='checked'
		/>
		Disabled Checked
	</label>
	<label
		class='vv-input-checkbox vv-input-checkbox--switch readonly'
		for='switch-option-readonly'
	>
		<input
			type='checkbox'
			role='switch'
			id='switch-option-readonly'
			name='switch-option-readonly'
			value='switch-option-readonly'
			disabled='disabled'
			tabindex='-1'
		/>
		Readonly
	</label>
	<label
		class='vv-input-checkbox vv-input-checkbox--switch readonly'
		for='switch-option-readonly-checked'
	>
		<input
			type='checkbox'
			role='switch'
			id='switch-option-readonly-checked'
			name='switch-option-readonly-checked'
			value='switch-option-readonly-checked'
			disabled='disabled'
			checked='checked'
			tabindex='-1'
		/>
		Readonly Checked
	</label>
</section>