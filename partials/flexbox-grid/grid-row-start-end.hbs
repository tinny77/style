<section id='flexbox-grid__grid-row-start-end' class='mb-32'>
	<h1 class='text-20 text-word-2 mb-8'>Grid Row Start / End</h1>
	<h2 class='font-light text-word-3 mb-24'>Utilities for controlling how elements are sized and placed across grid rows.
	</h2>

	<div class='max-h-288 overflow-y-auto mb-32'>
		<table class='vv-table'>
			<thead class='sticky z-sticky top-0 bg-surface'>
				<tr>
					<th>
						Class
					</th>
					<th>
						Properties
					</th>
				</tr>
			</thead>
			<tbody class='align-baseline'>
				{{#each grid-row}}
				<tr>
					<td
						translate='no'
						class='font-mono text-accent whitespace-nowrap'
					>
						row-{{@key}}
					</td>
					<td
						translate='no'
						class='font-mono text-info whitespace-nowrap'
					>
					grid-row: {{this}};
					</td>
				</tr>
				{{/each}}
				{{#each grid-row-start-end}}
				<tr>
					<td
						translate='no'
						class='font-mono text-accent whitespace-nowrap'
					>
						row-{start|end}-{{@key}}
					</td>
					<td
						translate='no'
						class='font-mono text-info whitespace-nowrap'
					>
					grid-row-{start|end}: {{this}};
					</td>
				</tr>
				{{/each}}
			</tbody>
		</table>
	</div>

	<div class='container h-full rounded-md bg-surface-1 p-24'>
		<div class='grid grid-cols-2 gap-10 border-b border-alpha-1 mb-24 pb-24'>
			<div
				class='rounded-md p-10 bg-info text-center'
			>1</div>
			<div
				class='row-span-4 rounded-md p-10 bg-info text-center'
			>2</div>
			<div
				class='rounded-md p-10 bg-info text-center'
			>3</div>
			<div
				class='row-span-3 rounded-md p-10 bg-info text-center'
			>4</div>
			<div
				class='rounded-md p-10 bg-info text-center'
			>5</div>
			<div
				class='row-span-full rounded-md p-10 bg-info text-center'
			>6</div>
		</div>
		<div class='grid grid-rows-2 gap-10 border-b border-alpha-1 mb-24 pb-24'>
			<div
				class='rounded-md p-10 bg-info text-center'
			>1</div>
			<div
				class='row-start-5 rounded-md p-10 bg-info text-center'
			>2</div>
			<div
				class='rounded-md p-10 bg-info text-center'
			>3</div>
			<div
				class='rounded-md p-10 bg-info text-center'
			>4</div>
			<div
				class='rounded-md p-10 bg-info text-center'
			>5</div>
			<div
				class='row-start-auto rounded-md p-10 bg-info text-center'
			>6</div>
		</div>
		<div class='grid grid-rows-2 gap-10'>
			<div
				class='rounded-md p-10 bg-info text-center'
			>1</div>
			<div
				class='row-end-5 rounded-md p-10 bg-info text-center'
			>2</div>
			<div
				class='rounded-md p-10 bg-info text-center'
			>3</div>
			<div
				class='rounded-md p-10 bg-info text-center'
			>4</div>
			<div
				class='rounded-md p-10 bg-info text-center'
			>5</div>
			<div
				class='row-end-auto rounded-md p-10 bg-info text-center'
			>6</div>
		</div>
	</div>
</section>