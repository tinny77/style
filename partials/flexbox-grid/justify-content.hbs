<section id='flexbox-grid__justify-content' class='mb-32'>
	<h1 class='text-20 text-word-2 mb-8'>Justify Content</h1>
	<h2 class='font-light text-word-3 mb-24'>Utilities for controlling how flex and grid items are positioned along a container's main axis.
	</h2>

	<div class='max-h-288 overflow-y-auto mb-32'>
		<table class='vv-table'>
			<thead class='sticky z-sticky top-0 bg-surface'>
				<tr>
					<th>
						Class
					</th>
					<th>
						Properties
					</th>
				</tr>
			</thead>
			<tbody class='align-baseline'>
				{{#each justify-align-content}}
				<tr>
					<td
						translate='no'
						class='font-mono text-accent whitespace-nowrap'
					>
						justify-{{@key}}
					</td>
					<td
						translate='no'
						class='font-mono text-info whitespace-nowrap'
					>
					justify-content: {{this}};
					</td>
				</tr>
				{{/each}}
			</tbody>
		</table>
	</div>

	<div class="container h-full rounded-md bg-surface-1 p-24">
		<div class="flex flex-row justify-start gap-md border-b border-alpha-1 mb-24 pb-24">
			<div class="w-100 rounded-md py-10 bg-info text-center">1</div>
			<div class="w-100 rounded-md py-10 bg-info text-center">2</div>
			<div class="w-100 rounded-md py-10 bg-info text-center">3</div>
		</div>
		<div class="flex flex-row justify-end gap-md border-b border-alpha-1 mb-24 pb-24">
			<div class="w-100 rounded-md py-10 bg-info text-center">1</div>
			<div class="w-100 rounded-md py-10 bg-info text-center">2</div>
			<div class="w-100 rounded-md py-10 bg-info text-center">3</div>
		</div>
		<div class="flex flex-row justify-center gap-md border-b border-alpha-1 mb-24 pb-24">
			<div class="w-100 rounded-md py-10 bg-info text-center">1</div>
			<div class="w-100 rounded-md py-10 bg-info text-center">2</div>
			<div class="w-100 rounded-md py-10 bg-info text-center">3</div>
		</div>
		<div class="flex flex-row justify-between gap-md border-b border-alpha-1 mb-24 pb-24">
			<div class="w-100 rounded-md py-10 bg-info text-center">1</div>
			<div class="w-100 rounded-md py-10 bg-info text-center">2</div>
			<div class="w-100 rounded-md py-10 bg-info text-center">3</div>
		</div>
		<div class="flex flex-row justify-around gap-md border-b border-alpha-1 mb-24 pb-24">
			<div class="w-100 rounded-md py-10 bg-info text-center">1</div>
			<div class="w-100 rounded-md py-10 bg-info text-center">2</div>
			<div class="w-100 rounded-md py-10 bg-info text-center">3</div>
		</div>
		<div class="flex flex-row justify-evenly gap-md">
			<div class="w-100 rounded-md py-10 bg-info text-center">1</div>
			<div class="w-100 rounded-md py-10 bg-info text-center">2</div>
			<div class="w-100 rounded-md py-10 bg-info text-center">3</div>
		</div>
	</div>
</section>