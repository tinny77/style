<section id='flexbox-grid__grid-auto-flow' class='mb-32'>
	<h1 class='text-20 text-word-2 mb-8'>Grid Auto Flow</h1>
	<h2 class='font-light text-word-3 mb-24'>Utilities for controlling how elements in a grid are auto-placed.
	</h2>

	<div class='max-h-288 overflow-y-auto mb-32'>
		<table class='vv-table'>
			<thead class='sticky z-sticky top-0 bg-surface'>
				<tr>
					<th>
						Class
					</th>
					<th>
						Properties
					</th>
				</tr>
			</thead>
			<tbody class='align-baseline'>
				{{#each grid-auto-flow}}
				<tr>
					<td
						translate='no'
						class='font-mono text-accent whitespace-nowrap'
					>
						grid-flow-{{@key}}
					</td>
					<td
						translate='no'
						class='font-mono text-info whitespace-nowrap'
					>
					grid-auto-flow: {{this}};
					</td>
				</tr>
				{{/each}}
			</tbody>
		</table>
	</div>

	<div class='container h-full rounded-md bg-surface-1 p-24'>
		<div class='relative grid grid-flow-row gap-10 border-b border-alpha-1 mb-24 pb-24' style="grid-template-columns: auto auto auto; grid-template-rows: auto auto;">
			<div
				class='rounded-md p-10 bg-info text-center'
			>1</div>
			<div
				class='rounded-md p-10 bg-info text-center'
			>2</div>
			<div
				class='rounded-md p-10 bg-info text-center'
