<section id='backgrounds__background-origin' class='mb-32'>
	<h1 class='text-20 text-word-2 mb-8'>Background Origin</h1>
	<h2 class='font-light text-word-3 mb-24'>Utilities for controlling how an
		element's background is positioned relative to borders, padding, and
		content.
	</h2>

	<div class='max-h-288 overflow-y-auto mb-32'>
		<table class='vv-table'>
			<thead class='sticky z-sticky top-0 bg-surface'>
				<tr>
					<th>
						Class
					</th>
					<th>
						Properties
					</th>
				</tr>
			</thead>
			<tbody class='align-baseline'>
				{{#each background-origin}}
				<tr>
					<td
						translate='no'
						class='font-mono text-accent whitespace-nowrap'
					>
						bg-origin-{{@key}}
					</td>
					<td
						translate='no'
						class='font-mono text-info whitespace-nowrap'
					>
					background-origin: {{this}};
					</td>
				</tr>
				{{/each}}
			</tbody>
		</table>
	</div>
</section>