<section id='borders__border-width' class='mb-32'>
	<h1 class='text-20 text-word-2 mb-8'>Border Width</h1>
	<h2 class='font-light text-word-3 mb-24'>Utilities for controlling the width
		of an element's borders.
	</h2>

	{{> spacer-helpers/border-width }}

	<div class='max-h-288 overflow-y-auto mb-32'>
		<table class='vv-table'>
			<thead class='sticky z-sticky top-0 bg-surface'>
				<tr>
					<th>
						Class
					</th>
					<th>
						Properties
					</th>
				</tr>
			</thead>
			<tbody class='align-baseline'>
				<tr>
					<td
						translate='no'
						class='font-mono text-accent whitespace-wrap'
					>
						border-{spacer-size}
					</td>
					<td
						translate='no'
						class='font-mono text-info whitespace-wrap'
					>
						border-width: {spacer-value}
					</td>
				</tr>
				<tr>
					<td
						translate='no'
						class='font-mono text-accent whitespace-wrap'
					>
						border-x-{spacer-size}
					</td>
					<td
						translate='no'
						class='font-mono text-info whitespace-wrap'
					>
						<div>border-left-width: {spacer-value}</div>
						<div>border-right-width: {spacer-value}</div>
					</td>
				</tr>
				<tr>
					<td
						translate='no'
						class='font-mono text-accent whitespace-wrap'
					>
						border-y-{spacer-size}
					</td>
					<td
						translate='no'
						class='font-mono text-info whitespace-wrap'
					>
						<div>border-top-width: {spacer-value}</div>
						<div>border-bottom-width: {spacer-value}</div>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
</section>