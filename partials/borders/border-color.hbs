<section id='borders__border-color' class='mb-32'>
	<h1 class='text-20 text-word-2 mb-8'>Border Color</h1>
	<h2 class='font-light text-word-3 mb-24'>Utilities for controlling the color
		of an element's borders.
	</h2>

	<div class='max-h-288 overflow-y-auto mb-32'>
		<table class='vv-table'>
			<thead class='sticky z-sticky top-0 bg-surface'>
				<tr>
					<th>
						Class
					</th>
					<th>
						Properties
					</th>
				</tr>
			</thead>
			<tbody class='align-baseline'>
				{{#each colors}}
				<tr>
					<td
						translate='no'
						class='font-mono text-accent whitespace-nowrap'
					>
						{{@key}}
					</td>
					<td
						translate='no'
						class='border-{{@key}} border-l-4 border-solid p-4 font-mono text-info whitespace-nowrap'
					>
					border-color: {{this}}
					</td>
				</tr>
				{{/each}}
			</tbody>
		</table>
	</div>
</section>